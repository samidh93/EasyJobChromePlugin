{
  "manifest_version": 3,
  "name": "EasyApply",
  "version": "1.0",
  "description": "Use AI to Apply for jobs on LinkedIn, Indeed, and StepStone.",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "downloads",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:11434/",
    "http://localhost:3001/",
    "*://*/*" 
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "input/example_profile.yaml",
        "resume/resumeParser.js",
        "libs/js-yaml.min.js",
        "libs/pdf.min.js",
        "libs/pdf.worker.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.linkedin.com/apply/*",
        "https://*.linkedin.com/*",
        "https://www.indeed.com/jobs*",
        "https://www.indeed.com/viewjob*",
        "https://*.indeed.com/*",
        "https://www.stepstone.de/jobs*",
        "https://www.stepstone.de/stellenangebote*",
        "https://www.stepstone.com/*",
        "https://*.stepstone.de/*",
        "https://*.stepstone.com/*"
      ],
      "js": [
        "dist/content.bundle.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "world": "ISOLATED"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:11434 http://localhost:3001 https://api.openai.com"
  }
}